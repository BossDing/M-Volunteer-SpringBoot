<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <!-- 通过配置文件加载数据库连接信息 -->
    <properties resource="config.properties"/>

    <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <commentGenerator>
            <property name="suppressDate" value="true"/>
            <property name="suppressAllComments" value="true" />
        </commentGenerator>

        <!-- 数据库连接信息 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="${data_source_url}"
                        userId="${data_source_username}"
                        password="${data_source_password}">
        </jdbcConnection>

        <!-- 生成的model目录 -->
        <javaModelGenerator targetPackage="com.github.oneone1995.excel2db.domain" targetProject="src/main/java"/>

        <!-- 生成的.xml目录 -->
        <sqlMapGenerator targetPackage="mapper"  targetProject="src/main/resources"/>

        <!-- 生成的mapper接口目录 -->
        <javaClientGenerator targetPackage="com.github.oneone1995.excel2db.mapper" targetProject="src/main/java" type="XMLMAPPER" />

        <!-- 根据哪张表生成 -->
        <table tableName="activity" >
            <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
        </table>
    </context>
</generatorConfiguration>